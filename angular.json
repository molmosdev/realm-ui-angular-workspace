{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "realm-ui-angular": {
      "projectType": "library",
      "root": "projects/realm-ui-angular",
      "sourceRoot": "projects/realm-ui-angular/src",
      "prefix": "r",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/realm-ui-angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/realm-ui-angular/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/realm-ui-angular/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/realm-ui-angular/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/realm-ui-angular/**/*.ts",
              "projects/realm-ui-angular/**/*.html"
            ],
            "eslintConfig": "projects/realm-ui-angular/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["angular-eslint"]
  }
}
